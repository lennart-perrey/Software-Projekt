<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetterBeer.MenuPages.StarPage"
             BackgroundColor="Black">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.iOS>
                0,20,0,0
            </OnPlatform.iOS>
            <OnPlatform.Android>
                0,0,0,0
            </OnPlatform.Android>
        </OnPlatform>

    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout x:Name="stlout_Swipe" Margin="0,20,0,0">

            <StackLayout BackgroundColor="Black" VerticalOptions="Start">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="img_Options" Source="MenuButton.PNG" Grid.Column="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Options_Tapped" ></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>


                    <Image x:Name="img_Ranking" Source="RankingButtonClicked.PNG" Grid.Column="1">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer  ></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="img_Home" Source="HomeButton.PNG" Grid.Column="2">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Home_Tapped"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="img_Friends" Source="FriendsButton.PNG" Grid.Column="3">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Friends_Tapped" ></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="img_Scan"  Source="CameraButton.PNG" Grid.Column="4">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Scan_Tapped"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
            </StackLayout>
            <StackLayout VerticalOptions="FillAndExpand" Orientation="Vertical"  BackgroundColor="White">
                <Grid BackgroundColor="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="275"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                        <SearchBar Grid.Column="0" x:Name="searchBar" Placeholder="Suche" VerticalOptions="Start" 
                               HorizontalOptions="Start" TextChanged="searchBar_TextChanged"
                               BackgroundColor="Black" Margin="0,-10,0,0"/>
                    
                        <Button x:Name="btn_Filter" Grid.Column="1" Text="Filtern" Clicked="btn_Filter_Clicked" 
                                TextColor="#FFCD33" FontAttributes="Bold" FontSize="Large" BackgroundColor="Black"
                                HorizontalOptions="Center" VerticalOptions="Center"/> 
                </Grid>
                <Picker x:Name="picker_Criteria" HorizontalOptions="FillAndExpand"
                        HeightRequest="50" SelectedIndexChanged="item_Tapped" BackgroundColor="White"
                        TextColor="Black" FontSize="Large" FontAttributes="Bold" Margin="0,-5,0,0"/>
                
                <StackLayout x:Name="highscoreLayout" Orientation="Vertical" Margin="0,10,0,0">       
                </StackLayout>
                
                <ListView x:Name="lv_searchBeer" ItemTapped="Handle_ItemTapped">
                </ListView>

           </StackLayout>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>